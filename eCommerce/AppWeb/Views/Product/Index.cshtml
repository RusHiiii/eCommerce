@model AppWeb.Models.ProduitListModel
@{
    ViewBag.Title = "List of products";
}

<div>
    <h2>@ViewBag.Title</h2>
    @Html.TextBox("ProductName", null, new { @class = "form-control" })  
</div>



<table class="table table-striped" id="listOfProducts">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Label</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Description</th>
            <th scope="col">Categorie</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in @Model.Products)
        {
            <tr class="ProductRow">
                <th scope="row">@prod.ProductCode</th>
                <td id="productLabel" value="@prod.ProductLabel">@prod.ProductLabel</td>
                <td>@prod.ProductPrice</td>
                <td>@prod.ProductStock</td>
                <td>@prod.ProductDescription</td>
                <td>@prod.ProductCategorieId</td>
                <td>
                    <div class="flex-div">
                        @Html.ActionLink("Supprimer", "Delete", "Product", new { id = prod.ProductId }, new { @class = "stdButton deleteButton" })
                        @Html.ActionLink("Détail", "Details", "Product", new { id = prod.ProductId }, new { @class = "stdButton detailButton" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>