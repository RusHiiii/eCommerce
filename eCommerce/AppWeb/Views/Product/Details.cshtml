@model AppWeb.Models.ProduitModels
@{
    ViewBag.Title = "Detail of products";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit","Product",FormMethod.Post))
{
    @Html.ValidationSummary(true,"Echec de la modification du produit")
    <div class="form-group">
        <label class="col-sm-2 control-label">Code</label>
        <div class="col-sm-10">
            <!--<input type="text" class="form-control" placeholder="Code" name="code" value="@Model.ProductCode">-->
            @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <!-- <input type="text" class="form-control" placeholder="Name" name="Name" value="@Model.ProductLabel"> -->
            @Html.TextBoxFor(m => m.ProductLabel, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
            <!-- <input type="text" class="form-control" placeholder="Price" name="Price" value="@Model.ProductPrice"> -->
            @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Stock</label>
        <div class="col-sm-10">
            <!-- <input type="text" class="form-control" placeholder="Stock" name="Stock" value="@Model.ProductStock"> -->
            @Html.TextBoxFor(m => m.ProductStock, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <!-- <textarea placeholder="Description" class="form-control" name="Description" rows="3">@Model.ProductDescription</textarea> -->
            @Html.TextBoxFor(m => m.ProductDescription, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Catégorie</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ProductCategorieId, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.TextBoxFor(m => m.ProductId, new { @class = "hidden" })
            <input type="submit" class="btn btn-default" value="Modifier" />
        </div>
    </div>
}